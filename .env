# OCPP Server Configuration
# Copy this file to .env and modify as needed for your environment

# Server Configuration
OCPP_HOST=localhost
OCPP_WEBSOCKET_PORT=9000
OCPP_API_PORT=9001
OCPP_SYSTEM_NAME=ocpp-central
OCPP_HEARTBEAT_INTERVAL=60
OCPP_USE_TLS=false
OCPP_CERT_FILE=cert.pem
OCPP_KEY_FILE=key.pem

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=ocpp
DB_SSL_MODE=disable

# Logging Configuration
OCPP_RAW_LOGGING=true
OCPP_LOG_DIR=logs
OCPP_LOG_MAX_SIZE=10485760
OCPP_LOG_MAX_FILES=5

# Additional Options
# Uncomment and modify as needed
# OCPP_RESET_INTERVAL=3600
# OCPP_MAX_CONNECTIONS=100